{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["apps/back-end/src", "apps/back-end/__tests__", "apps/back-end/tests", "packages/shared/src"],
  "exclude": ["node_modules", "dist"]
}
