{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* ===== Next.js / React ===== */
    "jsx": "preserve",
    "noEmit": true,

    /* ===== Platform ===== */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    /* ðŸš¨ IMPORTANT: Next.js DOES NOT like NodeNext here */
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* ===== Strictness ===== */
    "strict": true,
    "isolatedModules": true,

    /* ===== Frontend Aliases ===== */
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/app/*": ["app/*"],
      "@/types/*": ["types/*"]
    },

    /* ===== Runtime ===== */
    "types": ["node"],

    /* ===== Safety ===== */
    "skipLibCheck": true,
    "resolveJsonModule": true
  },

  "include": [
    "next-env.d.ts",
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "types/**/*",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
