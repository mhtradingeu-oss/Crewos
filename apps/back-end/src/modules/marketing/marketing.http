@apiUrl = http://localhost:4000/api/v1
@bearerToken =
@brandId = demo-brand
@campaignId = demo-campaign

### List campaigns
GET {{apiUrl}}/marketing?page=1&pageSize=10
Authorization: Bearer {{bearerToken}}

### Get campaign
GET {{apiUrl}}/marketing/{{campaignId}}
Authorization: Bearer {{bearerToken}}

### Create campaign
POST {{apiUrl}}/marketing
Content-Type: application/json
Authorization: Bearer {{bearerToken}}

{
  "brandId": "{{brandId}}",
  "name": "Q4 Holiday Blitz",
  "objective": "Drive awareness for gift sets",
  "budget": 45000,
  "status": "planning"
}

### Update campaign
PUT {{apiUrl}}/marketing/{{campaignId}}
Content-Type: application/json
Authorization: Bearer {{bearerToken}}

{
  "status": "active",
  "budget": 50000
}

### Delete campaign
DELETE {{apiUrl}}/marketing/{{campaignId}}
Authorization: Bearer {{bearerToken}}

### Generate marketing plan
POST {{apiUrl}}/marketing/ai/generate
Content-Type: application/json
Authorization: Bearer {{bearerToken}}

{
  "goal": "Launch the X-1 skincare line with an AI co-pilot vibe",
  "tone": "confident & helpful",
  "audience": "skincare enthusiasts in EU"
}

### Generate SEO description
POST {{apiUrl}}/marketing/ai/seo
Content-Type: application/json
Authorization: Bearer {{bearerToken}}

{
  "topic": "AI-powered skincare",
  "locale": "en"
}

### Generate social captions
POST {{apiUrl}}/marketing/ai/captions
Content-Type: application/json
Authorization: Bearer {{bearerToken}}

{
  "topic": "Launch week promo",
  "platform": "Instagram",
  "tone": "playful"
}
